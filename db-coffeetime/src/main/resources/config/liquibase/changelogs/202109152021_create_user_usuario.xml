<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

        <changeSet id="202109152021" author="erick.leone">
            <createTable tableName="usuario">
                <column name="ID" type="INT" autoIncrement="true" remarks="identificador da tabela usuario">
                    <constraints primaryKey="true"/>
                </column>
                <column name="NOME" type="VARCHAR(80)"  remarks="nome do usuario">
                    <constraints nullable="false"/>
                </column>
                <column name="CPF" type="VARCHAR(14)"  remarks="cpf do usuario">
                    <constraints nullable="false" unique="true"/>
                </column>
                <column name="DATANASCIMENTO" type="DATE"  remarks="data de nascimento do usuario">
                    <constraints nullable="false"/>
                </column>
                <column name="CARGO_ID" type="INT" remarks="chave estrangeira de cargo">
                    <constraints nullable="false"/>
                </column>
                <column name="FOTO" type="BLOB" remarks="foto do usuario">
                </column>
                <column name="EMAIL" type="VARCHAR(40)" remarks="email do usuario">
                    <constraints nullable="false" unique="true"/>
                </column>
                <column name="ST_ATIVO" type="BOOLEAN" remarks="Status do Usuario">
                    <constraints nullable="false"/>
                </column>
                <column name="TELEFONE" type="VARCHAR(15)" remarks="telefone do usuario">
                    <constraints nullable="false" unique="true"/>
                </column>

            </createTable>
        </changeSet>

        <changeSet id="202109151425" author="erick.leone">
            <addForeignKeyConstraint baseColumnNames="CARGO_ID" baseTableName="usuario" constraintName="fk_cargo_usuario" referencedColumnNames="ID" referencedTableName="cargo" />
        </changeSet>

</databaseChangeLog>