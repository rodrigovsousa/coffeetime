<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">



    <changeSet id="150920202004-05" author="matheus.meneses">
        <createTable tableName="EVENTO">
            <column name="ID" type="INTEGER"  autoIncrement="true" remarks="identificador da tabela usuario">
                <constraints primaryKey="true"/>
            </column>
            <column name="DATA" type="TIMESTAMP"  remarks="coluna que armazena a data do evento">
                <constraints nullable="false"/>
            </column>
            <column name="JUSTIFICATIVAADIAMENTO" type="VARCHAR(200)"  remarks="coluna que armazena o adiamento do evento">
                <constraints nullable="false"/>
            </column>
            <column name="MOTIVO_ID" type="INTEGER" remarks="coluna que armazena codigo do motivo do cancelamento">
                <constraints nullable="false"/>
            </column>
            <column name="VALOR" type="DECIMAL"  remarks="coluna que armazena o valor do evento">
                <constraints nullable="false"/>
            </column>
            <column name="SITUACAO" type="INTEGER"  remarks="coluna que armzena o ID da situacao do evento">
                <constraints nullable="false"/>
            </column>
            <column name="PATROCINADOR" type="VARCHAR(80)" remarks="coluna para armazenar o partrocinador do evento">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="150920202004-06" author="matheus.meneses">
        <createTable tableName="USUARIO_EVENTO">
            <column name="USUARIOID" type="INTEGER"  remarks="codigo do usuario presente na tabela ususario">
                <constraints primaryKey="true"/>
            </column>
            <column name="EVENTOID" type="INTEGER"  remarks="codigo do usuario presente na tabela EVENTOID">
                <constraints primaryKey="true"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet  author="matheus.meneses"  id="8">
        <addForeignKeyConstraint  baseColumnNames="MOTIVO_ID"
                                  baseTableName="EVENTO"
                                  baseTableSchemaName="public"
                                  constraintName="fk_motivo_evento"
                                  referencedColumnNames="ID"
                                  referencedTableName="MOTIVO"
                                  referencedTableSchemaName="public"
                                  validate="true"/>
    </changeSet>
    <changeSet  author="matheus.meneses"  id="9">
        <addForeignKeyConstraint  baseColumnNames="USUARIOID"
                                  baseTableName="USUARIO_EVENTO"
                                  baseTableSchemaName="public"
                                  constraintName="fk_usuarioevento_usuario"
                                  referencedColumnNames="ID"
                                  referencedTableName="USUARIO"
                                  referencedTableSchemaName="public"
                                  validate="true"/>
    </changeSet>
    <changeSet  author="matheus.meneses"  id="10">
        <addForeignKeyConstraint  baseColumnNames="EVENTOID"
                                  baseTableName="USUARIO_EVENTO"
                                  baseTableSchemaName="public"
                                  constraintName="fk_usuarioevento_evento"
                                  referencedColumnNames="ID"
                                  referencedTableName="EVENTO"
                                  referencedTableSchemaName="public"
                                  validate="true"/>
    </changeSet>
    <changeSet  author="matheus.meneses"  id="11">
        <addForeignKeyConstraint  baseColumnNames="SITUACAO"
                                  baseTableName="EVENTO"
                                  baseTableSchemaName="public"
                                  constraintName="fk_situacao_evento"
                                  referencedColumnNames="ID"
                                  referencedTableName="SITUACAO"
                                  referencedTableSchemaName="public"
                                  validate="true"/>
    </changeSet>
</databaseChangeLog>